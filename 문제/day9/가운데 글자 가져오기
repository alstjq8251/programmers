class Solution {
    public String solution(String s) {
        int a = s.length();
        int index = s.length()/2;
        StringBuilder sb = new StringBuilder();
        if(a % 2 == 0){
            sb.append(s.charAt(index-1)).append(s.charAt(index));
        }
        else sb.append(s.charAt(index));
        String answer = sb.toString();
        return answer;
    }
}
